<% @articles.each do |article| %>
	<h1>
		<%=link_to article.title, article%>
	</h1>
	<div>
		<%= article.body%>
		-
		<%=link_to "Eliminar", article, method: :delete, class:"btn btn-danger" %>
		<% if article.may_publish?%>
			-
			<%=link_to "Publicar", article, method: :delete, class:"btn btn-success" %>
		<% end %>
	</div>
<% end %>